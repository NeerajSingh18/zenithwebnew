        $("#DOB,#Increament_date,#billdate,#vindt,#vinsancdt,#sanctiondate,#Joining_date,#OfferDate,#JoiningBefore,#Issuedate,#frmdate,#todate,#joinigDate").attr( 'readOnly' , 'true' );
        $("#DOB,#Increament_date,#billdate,#vindt,#vinsancdt,#sanctiondate,#Joining_date,#OfferDate,#JoiningBefore,#Issuedate,#frmdate,#todate,#joinigDate").datepicker({ minDate: "01/01/1949", maxDate: @DateTime.Now.ToString("dd/mm/yyyy"),changeMonth: true,changeYear: true});
        //$("#DOB").datepicker({ minDate: new Date(1949, 1, 1), chageMonth: true, changeYear: true });
       
        $("#Logo,#Sign").change(function () {
            if ($(this).val() != '' && validateFileTypeImage($(this).val())) {
                if (($(this)[0].files[0].size / 1024) > 2048) {
                    alert('File size exceeded from minimum file size (1kb) and max file size (2048KB)');
                    $(this).val('');
                }
                else if (($(this)[0].files[0].size / 1024) < 1) {
                    alert('File size exceeded from minimum file size (1kb) and max file size (2048KB)');
                    $(this).val('');
                }
            }
            else {
                alert('Logo And Signature should be in .gif,.jpg,.jpeg,.png formate  ');
                $(this).val('');
            }
        });

        function validateFileTypeImage(value) {
            value = value.toString().split('').reverse().join('');
            value = value.substring(0, value.indexOf('.'));
            value = value.split('').reverse().join('');
            value = value.toLowerCase();
            if (value == 'gif' || value == 'jpg' || value == 'jpeg' || value == 'png') {
                return true;
            }
            return false;
        }

        jQuery(document).ready(function () {
            jQuery("#menuzord").menuzord({
                effect: "drop-up",
                animation: "none",
                indicatorFirstLevel: "",
                indicatorSecondLevel: ""
            });
        });

        var windowScroll_t;
        jQuery(window).scroll(function () {
            clearTimeout(windowScroll_t);
            windowScroll_t = setTimeout(function () {
                if (jQuery(this).scrollTop() > 100) {
                    jQuery('#totop').fadeIn();
                } else {
                    jQuery('#totop').fadeOut();
                }
            }, 500);
        });
        jQuery('#totop').click(function () {
            jQuery('html, body').animate({ scrollTop: 0 }, 600);
            return false;
        });

        $(document).ready(function () {
            $("form").submit(function (e) {
                // $("#pwait").show();

