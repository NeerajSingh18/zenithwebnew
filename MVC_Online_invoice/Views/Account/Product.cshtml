    margin-top: 20px;
    color: #555;
}

.general-info li {
    margin-bottom: 10px;
    font-size: 1rem;
}
    /* Hover effect for sections */
    .anchor-section:hover {
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
    }

/* Responsive for mobile */



