/* Section heading inside content */
.anchor-section h3 {
    font-size: 1.6rem;
    font-weight: 700;
    color: #3498db;
    text-decoration: underline; /* Underline section headings */
    margin-bottom: 20px;
}

/* Paragraph content */
.anchor-section p {
    font-size: 1rem;
    color: #444;
    text-align: justify;
    margin-bottom: 20px;
}

/* Key Features List */
.general-info {
