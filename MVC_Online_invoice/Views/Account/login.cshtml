    <style>
        body {
            font-size: 18px;
            font-family: Calibri;
        }

        .panel, .panel-body {
            width: 100%;
        }


        #pwait {
            opacity: 0.7;
            background-color: #fff;
            position: fixed !important;
            width: 100%;
            height: 100%;
            top: 0px !important;
            left: 0px !important;
            z-index: 9999;
            display: none;
        }

        th {
            font-weight: normal;
        }
    </style>

</head>
<body>
    <a href="#" id="totop"><i class="fa fa-chevron-up"></i><span>Top</span></a>
     <div class="blog-masthead" style="background-color: #fff">
        <div class="container">

            <div class="row" >
                <div class="col-xs-12 col-sms-12 col-sm-11 col-md-11 col-lg-11" style="text-align :center;">
                    <br />
                    <img src="~/Content/NewUI/data/logoheading.jpg" style="min-width: 100px;" class="img-responsive">
                    <br />
                </div>
            </div>

          @*  <div class="row">
                <div class="col-md-12">
                    <nav class="col-xs-12 col-sms-12 col-sm-11 col-md-11 col-lg-11">
                        <div id="menuzord" class="menuzord red menuzord-responsive">
                            <a href="javascript:void(0)" class="showhide" style="display: none;"><em></em><em></em><em></em></a>
                            <a href="javascript:void(0)" class="menuzord-brand m-brand">Navigation</a>
                            @{Html.RenderAction("menudesh", "Shared");}


                        </div>
                    </nav>
                </div>
            </div>*@

        </div>
    </div>

      <section class="sub-page-banner brdr_top5 brdr_top_clr1 horticulture-banner">

        <div class="container">
            <div class="row">

                <div class="col-xs-12 col-sms-12 col-sm-4 col-md-4 col-lg-4" style="text-align: center; padding: 70px 0px;">
                </div>
                <div class="col-xs-12 col-sms-12 col-sm-4 col-md-4 col-lg-4">




                    <div class="main-login main-center" style="margin-top: 30px; margin: 0 auto; max-width: 330px; padding: 40px 40px; background-color: #fff">
                        <form class="form-horizontal" method="post" action="~/Account/Login">

                            <p class="field-validation-error">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                            </p>
                          @*  <label class="control-label" for="inputSuccess1">Login Form</label>*@

                            <p class="field-validation-error" style="text-align: center; color: red">@ViewBag.Message   </p>

                            <div class="form-group">
                                <label for="name" class="cols-sm-2 control-label" style="text-align: left;">User ID</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter your Name", @autocomplete = "off" })

                                    </div>
                                    @Html.ValidationMessageFor(m => m.UserName)
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password" class="cols-sm-2 control-label" style="text-align: left;">Password</label>
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your Password", @autocomplete = "off" })

                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="cols-sm-12">
                                    <div class="input-group">
                                        <img src="@Url.Action("GetCaptchaImage", "Account")" style="width:100%;" />
                                        <br />
                                        @Html.TextBoxFor(m => m.CaptchaText, new { @class = "form-control", @placeholder = "Enter Image Captcha Text", @autocomplete = "off" })
                                        @Html.ValidationMessageFor(m => m.CaptchaText)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <input type="submit" name="commit" class="btn btn-primary btn-lg btn-block login-button" value="Login">
                            </div>

                          @*  <div class="login-register" style="text-align: center;">
                                <a href="~/Account/ForgetPassword">Forget Password</a>
                            </div>*@

                        </form>
                    </div>
                </div>

                <div class="col-xs-12 col-sms-12 col-sm-4 col-md-4 col-lg-4" style="text-align: center; padding: 70px 0px;">
                </div>
            </div>
        </div>


    </section>

      <footer id="footer">
        <div class="footer-wrapper">
            <div class="container">
                <div class="row no-margin">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="footer-widget">
                            <div class="contact-widget">
                                <h6 class="botom-g">INVOICE</h6>
                                <p style="text-transform: none">
                                    Best viewed in 1024*768 resolution with Mozilla Firefox/IE8+
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            </div>
    </footer>


    <script type="text/javascript" src="~/Content/NewUI/data/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/NewUI/data/script.js"></script>


</body>
</html>
